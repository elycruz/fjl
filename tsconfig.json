{
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "esnext"
    ],
    "noImplicitAny": false,
    "target": "ESNext",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist/es"
  },
  "exclude": [
    "node_modules/",
    "dist/"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
