{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext"],
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "files": [
    "src/**/*.ts",
    "types/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "types": [
    "types/index.d.ts"
  ]
}
